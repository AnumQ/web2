<div class="display-cart">
  <div id="cart">
	<table>
	  <% @items = cart.line_items %>
	  <% @items.each do |item| %>
	<tr>
   		 <td><%= image_tag(item.product.image_url, :size => "150x250") %></td>
   		 <td class="title"><%= item.product.title %></td>
	     <td class="quantity"><a>Quantity:</a><%= item.quantity %></td>
	     <td><div id="price2"><p class="w">Price</p><br />
	     <p class="q"><%= item.quantity %> x <%= item.product.price %> = <%= item.total_price %></p></div></td>
	 <% end %>
	</tr>
    <tr>
	  	<td></td>
	  	<td></td>
	  	<td></td>
	  	<td><div id="sum1"><p class="ika">Total</p><p class="ika2"><%= sprintf("Â£%0.02f",cart.total_price)%></p></div></td>
	</tr>
	</table>

	<div id="checkout">
		<div id="b2">
		<%= button_to "Checkout", new_order_path, :method => :get, :class => "button" %></div>
		<div id="b1">
		<%= button_to 'Empty cart', cart, :method => :delete, :class => "log-button", :confirm=> 'Are you sure?' %></div>
	</div>
  </div>
</div>
