<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" dir="ltr">
<head>
<title><%= full_title(yield(:title)) %></title>
<meta http-equiv="Content-type" content="text/html; charset=utf-8" />
<%= stylesheet_link_tag "style", "jquery.jscrollpane", :media => "all" %>
	<%= javascript_include_tag :defaults %>
  <%= csrf_meta_tags %>
</head>
<body>
	<!-- Wrapper -->
	<div id="wrapper">
		<div id="wrapper-bottom">
			<div class="shell">
				<!-- Header -->
				<div id="header">
					<!-- Logo -->
					<a title="Home" href="/store"><div id="logo"></div></a>
					<p class="shopping-cart"><a class="cart" href="/display_cart" title="Your Shopping Cart">
					Your Shopping Cart</a><span>Items:</span>&nbsp;<%= t1 %><span>Cost:Â£<%= t2 %></span>&nbsp;</p>	<!-- Search -->
					<!-- Search -->
					<div id="search-field">
							<%= form_tag( :controller => "store", :action => "search", :method => "get" ) do %>
							   <%= search_field_tag "", :Search, :class => "text" %>
							   <%= submit_tag "Go", :class => "submit-button", :class => "button3" %>
							<% end %>
					</div>
					<!-- END Search -->
					<div class="cl"></div>
					<!-- Navigation -->					
					<% if user_signed_in? %> 
					<div id="nav-log">
						<div id="login">
						  <a href="/logout" class="log-button">Log out</a>
						</div> 
						<div id="register">
						  <p>Welcome <%= link_to current_user.email, edit_user_registration_path %></p>
						</div>						
					</div>					 	
					<% else %>
					<div id="nav-log">
						<div id="login" >
						  <%= button_to('Login', new_user_session_path, :method => :get, :class => 'log-button' )  %>
						  
						</div>
						<div id="register" >
						<p> Not registered? Please <%= link_to('Register', new_user_registration_path)  %></p>
						</div>
					</div>
					<% end %>	
					<div class="cl"></div>				
					<!-- END Navigation -->
					<div class="cl"></div>
				</div>				
				
				<div id="navigation">
					<ul>
						<li><%= button_to 'Store', store_path, :class => 'log-button' %></li>
						<li><%= button_to 'About', about_path, :class => 'log-button' %></li>
						<li><%= button_to 'Contact', contact_path, :class => 'log-button' %></li>
						<li><%= button_to 'Help', help_path, :class => 'log-button' %></li>							
					</ul>				
				</div>
				<% if notice || alert %> 
				  <div id="flash">
					<p class="notice"><%= notice %></p>
					<p class="alert"><%= alert %></p> 
				  </div>
				<% end %>
				<div id="content">
					<!-- Featured Products -->
					<div class="products-holder">
						<div class="top"></div>
						<div class="best-sellers middle">													
							<div class="label">
							<% provide(:title, @title) %>
								<h3><%= yield(:title) %></h3>									
							</div>
							<div class="cl"></div>	
			
									<%= yield %>
							<div class="cl"></div>
						</div>
						<div class="bottom"></div>									
					</div>
					<!-- END Featured Products -->
				   
			 </div>
 
			</div>
		</div>
		<div id="footer">
					  <p><a href="index.htm">Home</a> | 
					  <a href="clothes.htm">Clothes</a> |
					  <a href="electronics.htm">Electrical</a> |
					  <a href="books.htm">DVD/Blu-Ray</a> |
					  <a href="music.htm">Music</a> |
					  <a href="video.htm">Shopping Cart</a> |
					  <a href="account.htm">Manage Account</a></p>
				   </div>
</div>
</body>
</html>
