<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" dir="ltr">
<head>
<title><%= full_title(yield(:title)) %></title>
<meta http-equiv="Content-type" content="text/html; charset=utf-8" />
<%= stylesheet_link_tag "style", "jquery.jscrollpane", :media => "all" %>
	<%= javascript_include_tag :defaults %>
  <%= csrf_meta_tags %>
<body>
	
	<!-- Wrapper -->
	<div id="wrapper">
		<div id="wrapper-bottom">
			<div class="shell">
				<!-- Header -->
				<div id="header">
					<!-- Logo -->
					<h1 id="logo"><a title="Home" href="#">accessories store</a></h1>
					<p class="shopping-cart"><a class="cart" href="/display_cart" title="Your Shopping Cart">Your Shopping Cart</a><span>Items:</span>&nbsp;<%= @cart.total %><span>Cost:</span>&nbsp;<%= sprintf("Â£%0.02f", @cart.total_price ) %></p>					
					<!-- Search -->
					<div class="search-expand"></div>
					<div id="search">
						<div class="retract-button">
							<p>retract</p>
						</div>
						<form action="" method="post">
							<input type="text" class="field" value="Search" title="Search" />
							<input type="submit" value="" class="submit-button" />
						</form>						
					</div>
					<!-- END Search -->
					<div class="cl"></div>
					<!-- Navigation -->					
					<% if user_signed_in? %> 
					<div id="navl">
						<div id="navigation">
							<% if current_user.admin? %>	
							     <h1>ADMIN page</h1>
							<%end%>
							<ul>
								<li><a title="Home" href="/store">Home</a></li>

								 <% if current_user.admin? %>
								   <li><a title="Products" href="/products">Products</a></li>
								   <li><a title="Orders" href="/orders">Orders</a></li>
								   <li><a title="Users" href="/users">Users</a></li>
								 <% end %>
								<li><a title="Contact" href="/contact">Contact</a></li>
								<li><a title="About" href="/about">About</a></li>
								<li><a title="Help" href="/help">Help</a></li>							
							</ul>	
						</div>
						<div id="login">
						  <%= button_to('Logout', destroy_user_session_path, :method => :delete) %>
						  <p>Welcome <%= link_to current_user.email, edit_user_registration_path %></p>
						</div> 		
					</div>					 	
					<% else %>
					<div id="nav-log">
						<div id="navigation">
							<ul>
								<li><a title="Home" href="/store">Home</a></li>
								<li><a title="Contact" href="/contact">Contact</a></li>
								<li><a title="About" href="/about">About</a></li>
								<li><a title="Help" href="/help">Help</a></li>							
							</ul>				
						</div>
						<div id="login" >
						  <%= link_to('Login', new_user_session_path, :method => :get )  %>
						  <p> Not registered? Please <%= link_to('Register', new_user_registration_path)  %></p>
						</div>
					</div>
					<% end %>	
					<div class="cl"></div>				
					<!-- END Navigation -->
				</div>
				<% if notice || alert %> 
				  <div id="flash">
					<p class="notice"><%= notice %></p>
					<p class="alert"><%= alert %></p> 
				  </div>
				<% end %>
				<div id="content">
					<!-- Featured Products -->
					<div class="products-holder">
						<div class="top"></div>
						<div class="middle">													
							<div class="label">
							<% provide(:title, @title) %>
								<h3><%= yield(:title) %></h3>									
							</div>
							<div class="cl"></div>	
			
									<%= yield %>
							<div class="cl"></div>
						</div>
						<div class="bottom"></div>									
					</div>
					<!-- END Featured Products -->
				   
			 </div>
 
			</div>
		</div>
		<div id="footer">
					  <p><a href="index.htm">Home</a> | 
					  <a href="clothes.htm">Clothes</a> |
					  <a href="electronics.htm">Electrical</a> |
					  <a href="books.htm">DVD/Blu-Ray</a> |
					  <a href="music.htm">Music</a> |
					  <a href="video.htm">Shopping Cart</a> |
					  <a href="account.htm">Manage Account</a></p>
				   </div>
</div>
</body>
</html>
